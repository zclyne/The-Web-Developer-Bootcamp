<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <!-- PUT request is not supported in html forms, use POST instead -->
    <!-- html forms only support get and post -->
    <!-- pay attention to the ?_method=PUT at the end of the url, this makes it to be a PUT request -->
    <!-- this is provided by a npm package called method-override -->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <lable>Title</lable>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <lable>Image</lable>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <lable>Blog Content</lable>
            <!-- textarea doesn't have value attribute -->
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" value="Submit">
    </form>
</div>

<% include partials/footer %>